@{
    ViewBag.Title = "Home";
}

<div class="section">

    <div class="container-fluid mable-homeHeader">

        <div class="row">
            <h1>
                Look for new places and gain <span>insights on its accessibility</span> information or check the <span>accessible amenities</span> when on the spot.
            </h1>
            <h5>City of Melbourne</h5>
        </div>
        <div class="row">
            <div class="btn mable-btn-primary btn-header">
                @Html.ActionLink("Find", "Search", "Home")

            </div>
            <div class="btn mable-btn-primary-outline btn-header">
                @Html.ActionLink("Near Me", "Map", "Home")
            </div>
        </div>

    </div>


</div>
<!-- End Section -->
<!-- Info Module-->
<div class="container-fluid bg-primary mable-infoHome">
    <div class="row">
        <div class="col-md-12">
            <h1>What are we trying to achieve?</h1>
            <div class="row mable-infoHome-content">
                <div class="col-md-4">
                    Display information regarding accessibility around the place of interest you can discover.
                </div>
                <div class="col-md-4">
                    Make maps available by having accessibility details needed on the spot.
                </div>
                <div class="col-md-4">
                    Make information accessible and available for everyone and on any device.
                </div>
            </div>
            <div class="row">
                <img class="img-responsive" src="~/Content/images/wheelchair-people.svg">

            </div>
        </div>
    </div>
</div>

