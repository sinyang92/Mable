
@{
    ViewBag.Title = "Near Me";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #input {
        z-index: 0;
        position: absolute;
        left: 125px;
        top: 8px !important;
        width: 40%;
    }

    .map-tooltip {
        color: #D1C9BE;
        margin-right: 10px;
    }
</style>

<!--Start Page Title-->
<div class="row">
    <div class="col-lg-12">
        NEAR ME - Find amenities and information
    </div>
</div>
<!-- End Page Title-->
<!-- Start Map Buttons-->
<div class="row" style="margin-bottom: 25px;">
    <div class="col-sm-3">
            <input type="checkbox" name="filter" id="sensor" class='btn-map' onclick="showSensor(this)">
        @*Urban parking data*@
        <label for='sensor' class="btn btn-default btn-block">Real-time on-street parking</label>

    </div>
    <div class="col-sm-2">
          @*<a  data-toggle="tab" href="#menu2"></a>*@
        <input type="checkbox" name="filter" id="toilet" class='btn-map' onclick="showToilet(this)" >
           <label for='toilet' class="btn btn-default btn-block">Public Toilet</label>
     
    </div>
    <div class="col-sm-3">
        <input type="checkbox" name="filter" id="park" class='btn-map' onclick="showPark(this)">
        @*Parking building*@
        <label for='park' class="btn btn-default btn-block">Off-street parking</label>
    </div>
    <div class="col-sm-2">
        <input type="checkbox" name="filter" id="wifi" class='btn-map' onclick="showWifi(this)">
        <label for='wifi' class="btn btn-default btn-block">Wifi Places</label>
    </div>
    <div class="col-sm-3">
        <input type="checkbox" name="filter" id="quite" class='btn-map' onclick="showQuiet(this)">
        @*Quite Places*@
        <label for='quite' class="btn btn-default btn-block">Quite Places</label>
    </div>
</div>

@*<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#home">Home</a></li>
    <li><a data-toggle="tab" href="#menu1">Real time Parking</a></li>
    <li><a data-toggle="tab" href="#menu2"  id="toilet" name="filter" onclick="showToilet(this)">Show Toilets</a></li>
</ul>*@


<!-- End Map Buttons-->
<!-- Start Map and Info-->
<div class="row">
    <!-- Start Map-->
    <div class="col-lg-8">
        @{
            ViewBag.Title = "Map";
        }

        <div style="height:80vh; width:100%;">
            <input id="input" type="text" placeholder="Search Place" class="form-control">
            <div id="map" style="height:100%;">
            </div>
        </div>
    </div>
    <!-- End Map-->
    <div class="col-lg-4">
        <div class="tab-content">
            <div id="realParkingInfo" class="tab-pane fade in active">
                  <div>
                    <h4>Information</h4>

                </div>
                <div>
                    <h4>Actions</h4>
                    <button> Current Location</button>
                    <button>Fullscreen</button>
                </div>
            </div>
            <div id="toiletInfo" class="tab-pane fade">
                <h3>toliet</h3>
                <p>Some content in menu 1.</p>
            </div>
            <div id="quietPlaceInfo" class="tab-pane fade">
                <h3>quiet places</h3>
                <p>Some content in menu 2.</p>
            </div>
            <div id="wifiInfo" class="tab-pane fade">
                <h3>wifi</h3>
                <p>Some content in menu 2.</p>
            </div>
        </div>
        
    </div>

</div>
<!-- End Map and Info-->


<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>

<!-- Modal -->
<div id="mapLegend" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Information</h4>
            </div>
            <div class="modal-body">
                <p>Legend</p>
            </div>

        </div>

    </div>
</div>

<script type="text/javascript" src="~/Content/js/map-google.js">
</script>

<script src="~/Content/js/markerclusterer.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDgWw5yvhJAS5LsXo2RGJa0o-cPWMNNPLo&libraries=places,geometry&callback=initMap">
</script>

