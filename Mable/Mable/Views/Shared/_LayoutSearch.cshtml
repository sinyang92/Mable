<!DOCTYPE html>

<html>

<head>

    @RenderPage("head.cshtml")


</head>

<body>
    <!-- Start Navbar -->
    <div class="navbar navbar-default navbar-static-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-ex-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <i class="fas fa-ellipsis-h"></i>
                </button>
                <a href='@Url.Action("Index","Home")'>
                    <img class="navbar-brand" src="~/Content/images/logo-mable-hor.svg" />
                </a>
                @*@Html.ActionLink("MABLE", "Index", "Home", null, new { @class = "navbar-brand" })*@

            </div>

            <div class="collapse navbar-collapse" id="navbar-ex-collapse">
                <div class="navbar-form nav navbar-nav" id="mable-menuSearch">
                    <div class="title">Find</div>

                    @using (Html.BeginForm("SearchResult", "Home"))

                    {

                        @Html.TextBox("keyword", "", new { placeholder = "restaurants, stores, and more" })

                    }
                </div>
                <ul class="nav navbar-nav navbar-right">
                    <li class="active">
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>

                    @*<li class="@(pageName == "Index" ? "active" : "")">

                        @Html.ActionLink("Find", "Search", "Home")

                    </li>*@
                    <li class="">
                        @Html.ActionLink("Near Me", "Map", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("About", "About", "Home")
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- End Navbar -->
    <!-- Start section -->



    <div class="section">

        <div class="container-fluid">

            @RenderBody()

        </div>

    </div>
    <footer>
        @RenderPage("Footer.cshtml")
    </footer>

    @RenderSection("scripts", required: false)

</body>

</html>

