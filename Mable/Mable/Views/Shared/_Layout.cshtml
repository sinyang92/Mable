@{ 
    var pageName = ViewContext.RouteData.Values["action"].ToString();
}
<!DOCTYPE html>

<html>

<head>

    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title Mable</title>

    <script type="text/javascript" src='@Url.Content("~/Scripts/jquery-1.10.2.min.js")'></script>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>

    <script type="text/javascript" src="https://netdna.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.9/css/all.css" integrity="sha384-5SOiIsAziJl6AWe0HWRKTXlfcSHKmYV4RBF18PPJ173Kzn7jzMyFuTtk8JA7QQG1" crossorigin="anonymous">

    <link href="~/Content/css/mable-style.css?version=1.0" rel="stylesheet" type="text/css">

    <link href="https://fonts.googleapis.com/css?family=Muli" rel="stylesheet">


    <style>
        .navbar-nav li.active a
        {
        font-weight: 600;
        color: black;
            }
    </style>
</head>

<body>

    <!-- Start Navbar -->

    <div class="navbar navbar-default navbar-static-top">

        <div class="container-fluid">

            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-ex-collapse">

                    <span class="sr-only">Toggle navigation</span>

                    <i class="fas fa-ellipsis-h"></i>

                </button>

                @Html.ActionLink("MABLE", "Index", "Home", null, new { @class = "navbar-brand" })
                <span>Discovering Melbourne</span>

            </div>

            <div class="collapse navbar-collapse" id="navbar-ex-collapse">

                <ul class="nav navbar-nav navbar-right">

                    <li class="@(pageName == "Index" ? "active" : "")">

                        @Html.ActionLink("Home", "Index", "Home")

                    </li>

                    <li class="@(pageName == "Map" ? "active" : "")">

                        @Html.ActionLink("Map", "Map", "Home")

                    </li>

                    <li class="@(pageName == "About" ? "active" : "")">

                        @Html.ActionLink("About", "About", "Home")

                    </li>

                </ul>

            </div>

        </div>

    </div>

    <!-- End Navbar -->
    <!-- Start section -->

    <div class="section">

        <div class="container-fluid">

            @RenderBody()

        </div>

    </div>

    @RenderSection("scripts", required: false)

</body>

</html>

